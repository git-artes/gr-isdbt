<?xml version="1.0"?>
<block>
  <name>OFDM Synchronization 1seg</name>
  <key>isdbt_ofdm_synchronization_1seg</key>
  <category>ISDBT</category>
  <import>import isdbt</import>
  <make>isdbt.ofdm_synchronization_1seg($mode, $cp_length)</make>
  <param>
      <name>Transmission Mode</name>
	  <key>mode</key>
	  <value>3</value>
	  <type>enum</type>
      <option>
	    <name>MODE1(2K)</name>
	    <key>1</key>
      </option>
	  <option>
	    <name>MODE2(4K)</name>
	    <key>2</key>
	  </option>
	  <option>
	    <name>MODE3(8K)</name>
	    <key>3</key>
	  </option>
  </param> 
   <param>
	<name>Guard Interval</name>
	<key>cp_length</key>
	<value>0.125</value>
	<type>enum</type>
	<option>
		<name>1/4</name>
		<key>0.250</key>
	</option>
	<option>
		<name>1/8</name>
		<key>0.125</key>
	</option>
	<option>
		<name>1/16</name>
		<key>0.0625</key>
	</option>
    <option>
		<name>1/32</name>
		<key>0.03125</key>
	</option>
  </param>

  <sink>
    <name>in</name>
    <type>complex</type>
    <vlen>1</vlen>
  </sink>
  <source>
    <name>out</name>
    <type>complex</type>
    <vlen>108*2**($mode-1)</vlen>
  </source>
  <!-- Optional Outputs -->
  <source>
    <name>ch. taps</name>
    <type>complex</type>
    <vlen>108*2**($mode-1)</vlen>
    <optional>1</optional>
  </source>
  <source>
    <name>freq. error</name>
    <type>float</type>
    <optional>1</optional>
  </source>
  <source>
    <name>samp. error</name>
    <type>float</type>
    <optional>1</optional>
  </source>

</block>
